ft_strnequ.o \
ft_strrchr.o \
ft_strsub.o \
ft_strnew.o \
ft_toupper.o \
ft_strnstr.o \
ft_tolower.o \
ft_strstr.o \
ft_wordlen.o \
ft_wordcnt.o \
ft_strsplit.o \
ft_strtrim.o \
ft_strcsub.o \

EXE = a.out

MAIN = ../main.c

all: $(NAME)

$(NAME):
	gcc $(CFLAGS) -I $(INCS) -c $(SRCS)
	ar rc $(NAME) $(OUTPUT)
	ranlib $(NAME)

norm:
	norminette $(SRCS)

clean:
	/bin/rm -f $(OUTPUT)

exe:
	gcc $(CFLAGS) -o $(EXE) $(MAIN) -I $(INCS) -L. -lft

fclean: clean
	rm -f $(NAME)
	
re: fclean all

fuckall: fclean norm all exe
