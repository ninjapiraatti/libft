ft_tolower.c \
ft_strstr.c \
ft_wordlen.c \
ft_wordcnt.c \
ft_strsplit.c \
ft_strtrim.c \
ft_strcsub.c \

INCS = includes/libft.h

CFLAGS = -Wall -Wextra -Werror

OUTPUT = ft_atoi.o \
ft_isascii.o \
ft_isprint.o \
ft_isalpha.o \
ft_isdigit.o \
ft_isalnum.o \
ft_bzero.o \
ft_lstdelone.o \
ft_lstadd.o \
ft_lstdel.o \
ft_lstmap.o \
ft_lstiter.o \
ft_memalloc.o \
ft_lstnew.o \
ft_memchr.o \
ft_memdel.o \
ft_memcpy.o \
ft_memcmp.o \
ft_itoa.o \
ft_putendl.o \
ft_putchar.o \
ft_memmove.o \
ft_memset.o \
ft_putstr.o \
ft_putendl_fd.o \
ft_putnbr.o \
ft_putnbr_fd.o \
ft_putstr_fd.o \
ft_memccpy.o \
ft_strclr.o \
ft_strcat.o \
ft_strdel.o \
ft_strcpy.o \
ft_putchar_fd.o \
ft_striter.o \
ft_strcmp.o \
ft_strequ.o \
ft_strchr.o \
ft_strdup.o \
ft_strlen.o \
ft_striteri.o \
ft_strjoin.o \
ft_strmapi.o \
ft_strlcat.o \
ft_strmap.o \
